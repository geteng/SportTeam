/* 列表项样式 */
.item-simple {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

/* 按钮组样式 */
.btn-group {
  display: flex;
  gap: 15rpx;
  margin-top: 20rpx;
}

.btn.mid {
  padding: 10rpx 0;
  flex: 1;
  font-size: 26rpx;
  border-radius: 8rpx;
}

/* 信息文本样式 */
.simple-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.simple-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}